<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TercerFragment">

    <TextView
        android:id="@+id/txt_impacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Impacto"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/txt_probabilidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Probabilidad"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        />
    <GridLayout
        android:id="@+id/grid_mapa_calor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_probabilidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:rowCount="3"
        android:columnCount="3">

        <Button
            android:id="@+id/btn_0_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Alto - Alto"/>
        <Button
            android:id="@+id/btn_0_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Alto - Medio"/>
        <Button
            android:id="@+id/btn_0_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Alto - Bajo"/>
        <Button
            android:id="@+id/btn_1_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Medio - Alto"/>
        <Button
            android:id="@+id/btn_1_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Medio - Medio"/>
        <Button
            android:id="@+id/btn_1_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Medio - Bajo"/>
        <Button
            android:id="@+id/btn_2_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Bajo - Alto"/>
        <Button
            android:id="@+id/btn_2_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Bajo - Medio"/>
        <Button
            android:id="@+id/btn_2_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Bajo - Bajo"/>

    </GridLayout>






</androidx.constraintlayout.widget.ConstraintLayout>