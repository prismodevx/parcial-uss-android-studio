<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/txt_bienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido:"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txt_bienvenido"/>
    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        app:layout_constraintTop_toBottomOf="@+id/txt_usuario"/>
    <EditText
        android:id="@+id/edt_descripcion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/txt_descripcion"/>

    <TextView
        android:id="@+id/txt_pregunta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="1. Cual es el impacto?"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_descripcion"/>
    <RadioGroup
        android:id="@+id/rdg_impacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_pregunta1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/r_impacto_alto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alto"/>
        <RadioButton
            android:id="@+id/r_impacto_medio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medio"/>
        <RadioButton
            android:id="@+id/r_impacto_bajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bajo"/>
    </RadioGroup>
    <TextView
        android:id="@+id/txt_pregunta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="1. Cual es la probabilidad?"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/rdg_impacto"/>
    <RadioGroup
        android:id="@+id/rdg_probabilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_pregunta2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/r_probabilidad_alto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alto"/>
        <RadioButton
            android:id="@+id/r_probabilidad_medio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medio"/>
        <RadioButton
            android:id="@+id/r_probabilidad_bajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bajo"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_ver_mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver mapa de calor"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>